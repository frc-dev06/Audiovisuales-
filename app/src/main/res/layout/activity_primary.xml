<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appInside.primaryActivity">

    <Button
        android:layout_width="326dp"
        android:layout_height="313dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="632dp"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_width="277dp"
        android:layout_height="270dp"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="632dp"
        android:backgroundTint="@color/second_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="310dp"
        android:layout_height="294dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="176dp"
        android:backgroundTint="@color/second_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="118dp"
        android:layout_height="141dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uniminuto_logo" />

    <Button
        android:layout_width="512dp"
        android:layout_height="480dp"
        android:layout_marginTop="592dp"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtlabel"
        android:layout_width="191dp"
        android:layout_height="79dp"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-light"
        android:text="Aqui podras..."
        android:textColor="#000"
        android:textColorLink="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistroDocente"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/second_blue"
        android:text="Registrar Docente"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistroImplemento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982" />

    <Button
        android:id="@+id/btnRegistroImplemento"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/second_blue"
        android:text="Registrar Implemento"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPrestamos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPrestamos"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/second_blue"
        android:text="Ver Prestamos"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnReportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnReportes"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginBottom="352dp"
        android:backgroundTint="@color/second_blue"
        android:text="Reportes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtHola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="9dp"
        android:text="Hola..."
        android:textColor="#222"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtlabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>